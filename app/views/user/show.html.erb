<h1><%= @user.username %>'s Profile</h1>

<%= image_tag(@user.avatar.url(:normal)) %>
<ul>  
  <li>Name: <%= @user.first_name %> <%= @user.last_name %></li>
  <li>Email: <%= @user.email %></li>
</ul>

<a href="/users/edit">Edit Profile</a>

<h2>My Recipe's:</h2>

<ul>
  <% @recipes.each do |r| %>
  <li><a href="<%= recipe_path(r.id) %>"><%= r.name %></a></li>
  <% end %>
</ul>
