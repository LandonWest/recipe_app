<h1>Edit <%= @recipe.name %></h1>

<%= form_for(@recipe) do |r| %>

    <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this tutorial from being saved:</h2>
      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= r.label :name %>
  <%= r.text_field :name %>

  <%= r.label :description %>
  <%= r.text_field :description %>

  <%= r.label :picture %>
  <%= r.file_field :recipe_pic %>

  <%= r.label :directions %>
  <%= r.text_field :directions %>

  <%= r.submit 'Submit' %><br>

  <br><a href="<%= user_path(current_user) %>">Cancel</a>

<% end %>
